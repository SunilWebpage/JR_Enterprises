<div class="max-w-4xl mx-auto px-4 py-8">
  <%= link_to "← Back to Products", home_path, class: "text-gray-500 hover:text-gray-700 mb-6 inline-block" %>

  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="grid grid-cols-1 md:grid-cols-2">
      <!-- Image Section -->
      <div class="h-64 md:h-full bg-gray-100 flex items-center justify-center p-4">
        <% if @product.image.attached? %>
        <%= image_tag @product.image, class: "object-cover w-full h-full max-h-[500px] rounded-lg" %>
        <% else %>
        <div class="text-gray-400">No Image Available</div>
        <% end %>
      </div>

      <!-- Details Section -->
      <div class="p-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @product.name %></h1>
        <p class="text-2xl text-green-600 font-semibold mb-6">$<%= @product.price %></p>


        <div class="flex gap-4">

          <div id="loader" style="display:none;">Loading...</div>

          <% if @already_in_cart %>
          <div class="bg-green-100 text-green-700 px-4 py-2 rounded">
            ✔ Product already in your cart
          </div>

          <% else %>
          <%= button_to add_to_cart_path(@product.id),method: :post,onclick: "showLoaderWithDelay(event)",class: "w-[200px] bg-yellow-500 text-white font-bold py-3 px-4 rounded-lg transition duration-200 ease-in-out transform hover:scale-[1.02]" do %>
          Add to Cart

          <% end %>

          <% end %>

          <button
            class="w-[200px] bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200 ease-in-out transform hover:scale-[1.02]">
            buy now
          </button>

        </div>


      </div>
    </div>
  </div>
</div>

<script>
  function showLoaderWithDelay(event) {
    event.preventDefault(); // stop immediate submit
    document.getElementById("loader").style.display = "block";

    setTimeout(() => {
      event.target.closest("form").submit(); // submit after delay
    }, 2000); // 2000ms = 2 seconds
  }
</script>