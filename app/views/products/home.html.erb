<div class="p-10 flex flex-col gap-10 min-h-[calc(100vh-64px)] items-center bg-gray-50">

  <!-- Section 1 -->
  <div class="w-[80%]">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 pl-2">Featured Products</h2>
    <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
      <div class="flex gap-6 overflow-x-auto pb-6 scrollbar-hide"> 
        <% if @products.present? %>
          <% @products.each do |p| %>
            <%= link_to productview_path(p), class: "group flex-shrink-0" do %>
              <div class="border border-gray-200 bg-white p-4 rounded-xl w-[240px] h-full hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <div class="h-48 w-full bg-gray-50 rounded-lg mb-4 flex items-center justify-center overflow-hidden relative">
                  <% if p.image.attached? %>
                    <%= image_tag p.image, class: "h-full w-full object-cover group-hover:scale-105 transition-transform duration-500" %>
                  <% else %>
                     <span class="text-gray-400 text-sm">No Image</span>
                  <% end %>
                </div>
                <div class="space-y-2">
                  <h3 class="font-semibold text-gray-800 text-lg truncate group-hover:text-blue-600 transition-colors"><%= p.name %></h3>
                  <p class="text-gray-600 font-bold text-xl">$<%= p.price %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <div class="w-full text-center py-10 text-gray-500">
             <p>No products found</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>  


</div>