<div
  class="min-h-[calc(100vh-64px)] bg-[url('bg2.png')] bg-cover bg-center flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-2xl shadow-xl">
    <div>
      <h2 class="mt-2 text-center text-3xl font-extrabold text-gray-900">
        Add New Product
      </h2>
    </div>
    <%= form_with(model: @product, local: true, class: "mt-8 space-y-6") do |f| %>
    <div class="rounded-md space-y-4">
      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, required: true, class: "appearance-none relative block w-full p-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm", placeholder: "Product Name" %>
      </div>

      <div>
        <%= f.label :image, class: "block text-sm font-medium text-gray-700" %>
        <%= f.file_field :image, class: "mt-1 block w-full border rounded-lg border-gray-300 text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 p-3" %>
      </div>

      <div>
        <%= f.label :price, class: "block text-sm font-medium text-gray-700" %>

        <%= f.text_field :price, class: "block w-full border rounded-lg border-gray-300 p-3 focus:border-blue-500 h-10 focus:ring-blue-500 sm:text-sm", placeholder: "0.00" %>

      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :order_count, "Orders", class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :order_count, class: "mt-1 block w-full border rounded-lg border-gray-300 p-3 focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "0" %>
        </div>
        <div>
          <%= f.label :quantity, "Stock", class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :quantity, class: "mt-1 block w-full border rounded-lg border-gray-300 p-3 focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "0" %>
        </div>
      </div>
    </div>

    <div>
      <%= f.submit "Create Product", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors p-3" %>
    </div>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to items_path, class: "font-medium text-blue-600 hover:text-blue-500 flex items-center justify-center gap-2" do %>
      <span>View Added Items</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
      <% end %>
    </div>
  </div>
</div>