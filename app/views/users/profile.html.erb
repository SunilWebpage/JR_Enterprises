<div class="min-h-[calc(100vh-64px)] bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <div class="text-center mb-6">
        <div class="h-24 w-24 rounded-full bg-indigo-100 flex items-center justify-center mx-auto mb-4">
           <%= image_tag "profile.svg", class: "h-12 w-12" %>
        </div>
        <h2 class="text-3xl font-extrabold text-gray-900"><%= @user.name %></h2>
        <p class="mt-1 text-sm text-gray-500"><%= @user.email %></p>
      </div>

      <div class="border-t border-gray-200 pt-6">
        <dl class="divide-y divide-gray-200">
          <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
            <dt class="text-sm font-medium text-gray-500">Full name</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @user.name %></dd>
          </div>
          <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
            <dt class="text-sm font-medium text-gray-500">Email address</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= @user.email %></dd>
          </div>
          <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
            <dt class="text-sm font-medium text-gray-500">Password</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 font-mono ">
                <div class="flex items-center justify-between">
              <%= @user.password %>
              </div>
            </dd>
          </div>
        </dl>
      </div>
      
      <div class="mt-6 flex gap-4">
        <%= button_to logout_path, method: :delete, class: "flex-1 flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" do %>
          Sign out
        <% end %>
        
        <button onclick="toggleEditModal()" type="button" class="flex-1 flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
          Edit Profile
        </button>
      </div>
    </div>
  </div>
</div>

<%= render 'edit' %>

