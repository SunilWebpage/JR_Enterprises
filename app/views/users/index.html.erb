

<div class="bg-[url('bg2.png')] bg-cover bg-center">
<div class="p-5 h-[calc(100vh-0rem)] flex flex-col items-center justify-center ">

<%= form_with(model: @user, local: true, class: "space-y-4") do |f| %>
         <div class="flex flex-col gap-4 border border-gray-300 p-5 w-[500px] rounded-xl shadow-lg bg-[#F4F6F5]">
       
        <div class="text-center font-light justify-center items-center flex">
        <%= image_tag "logo.svg", class: "h-20 w-20 rounded-full" %> 
        </div>

        <div class="text-xl text-center">
          Register
        </div>
   
        <div class="flex flex-col gap-2">
        <label>Name</label>
        <%= f.text_field :name,
            class: "border border-gray-300 rounded mt-1 h-10 w-full pl-2",
            placeholder: "Enter your Name" %>
      </div>

      <div class="flex flex-col gap-2">
        <label>Email</label>
        <%= f.text_field :email,
            class: "border border-gray-300 rounded mt-1 h-10 w-full pl-2",
            placeholder: "Enter your Email" %>
      </div>

      <div class="flex flex-col gap-2">
        <label>Password</label>
        <%= f.password_field :password,
            class: "border border-gray-300 rounded mt-1 h-10 w-full pl-2",
            placeholder: "Enter your Password" %>
      </div>

      <%= f.submit "Submit", class: "bg-blue-500 text-white px-4 py-2 rounded " %>
    <% end %>
    <div class="flex items-center justify-center gap-2">
      <h1>Already have an account?</h1>
      <%= link_to "Login", login_path, class: "text-blue-500" %>
    </div>

  </div>
</div>
</div>