<div class="container mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Your Cart</h1>
    <span class="text-gray-600"><%= @cart_items.count %> items</span>
  </div>

  <% if @cart_items.any? %>
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Cart Items -->
      <div class="lg:w-2/3">
        <div class="bg-white rounded-lg shadow-sm overflow-hidden border border-gray-100">
          <div class="hidden md:grid grid-cols-12 gap-4 p-4 bg-gray-50 text-sm font-medium text-gray-500 uppercase tracking-wider">
            <div class="col-span-6">Product</div>
            <div class="col-span-2 text-center">Price</div>
            <div class="col-span-2 text-center">Quantity</div>
            <div class="col-span-2 text-right">Total</div>
          </div>
          
          <div class="divide-y divide-gray-100">
            <% @cart_items.each do |item| %>
              <div class="p-4 md:grid md:grid-cols-12 md:gap-4 md:items-center">
                <!-- Product Info -->
                <div class="flex items-center gap-4 col-span-6 mb-4 md:mb-0">
                  <div class="w-20 h-20 flex-shrink-0 bg-gray-100 rounded-md overflow-hidden">
                    <% if item.product.image.attached? %>
                      <%= image_tag item.product.image, class: "w-full h-full object-cover" %>
                    <% else %>
                      <div class="w-full h-full flex items-center justify-center text-gray-400">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                      </div>
                    <% end %>
                  </div>
                  <div>
                    <h3 class="text-lg font-medium text-gray-900"><%= item.product.name %></h3>
                    <!-- Optional category or description could go here -->
                    <button class="md:hidden text-red-500 hover:text-red-700 text-sm mt-1">Remove</button>
                    <%= button_to remove_from_cart_path(item), method: :delete, class: "md:hidden text-red-500 hover:text-red-700 text-sm mt-1 flex items-center gap-1" do %>
                         <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                          </svg>
                          Remove
                    <% end %>
                  </div>
                </div>

                <!-- Price -->
                <div class="col-span-2 text-center text-gray-700 font-medium hidden md:block">
                  ₹ <%= item.product.price %>
                </div>

                <!-- Quantity -->
                <div class="flex items-center justify-between md:justify-center col-span-2 mb-4 md:mb-0">
                  <span class="md:hidden text-gray-500">Qty:</span>
                  <div class="flex items-center border border-gray-300 rounded-md">
                   <!-- Placeholder for quantity controls -->
                    <span class="px-2 py-1 text-gray-500"><%= item.quantity %></span>
                  </div>
                </div>

                <!-- Total & Remove (Desktop) -->
                <div class="col-span-2 text-right flex flex-col items-end justify-center">
                   <div class="text-lg font-bold text-gray-900">
                     ₹ <%= item.total_price %>
                   </div>
                   <%= button_to remove_from_cart_path(item), method: :delete, class: "hidden md:inline-flex text-gray-400 hover:text-red-500 transition-colors mt-2" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                   <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        
        <div class="mt-6 flex justify-between items-center">
            <%= link_to "← Continue Shopping", home_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
        </div>
      </div>

      <!-- Order Summary -->
      <div class="lg:w-1/3">
        <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 sticky top-24">
          <h2 class="text-lg font-bold text-gray-900 mb-6">Order Summary</h2>
          
          <div class="space-y-4 mb-6">
            <div class="flex justify-between text-gray-600">
              <span>Subtotal</span>
              <span>₹ <%= @cart_items.sum { |item| item.total_price } %></span>
            </div>
            <div class="flex justify-between text-gray-600">
              <span>Shipping</span>
              <span class="text-gray-400">Calculated at checkout</span>
            </div>
            <div class="border-t border-gray-100 pt-4 flex justify-between font-bold text-gray-900 text-lg">
              <span>Total</span>
              <span>₹ <%= @cart_items.sum { |item| item.total_price } %></span>
            </div>
          </div>
          
          <button class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-4 rounded-lg transition-colors shadow-md hover:shadow-lg">
            Checkout
          </button>
          
          <div class="mt-6 text-xs text-gray-500 text-center">
            <p>Secure Checkout - SSL Encrypted</p>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="text-center py-16 bg-white rounded-lg shadow-sm border border-gray-100">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-indigo-100 text-indigo-600 mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-gray-900 mb-2">Your cart is empty</h2>
      <p class="text-gray-500 mb-8">Looks like you haven't added anything to your cart yet.</p>
      <%= link_to "Start Shopping", products_path, class: "inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-8 rounded-lg transition-colors" %>
    </div>
  <% end %>
</div>